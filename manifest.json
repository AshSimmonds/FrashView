{
    "manifest_version": 3,

    "name": "FreshView for YouTube™",
    "short_name": "FreshView for YouTube™",
    "description": "Hide YouTube™ videos you've already watched to easily discover fresh content.",
    "version": "1.2.0",

    "icons": {
         "16": "img/icon16.png",
         "32": "img/icon32.png",
         "48": "img/icon48.png",
        "128": "img/icon128.png"
    },

    "page_action": {
        "default_icon": {
            "16": "img/icon16.png",
            "19": "img/icon19.png",
            "24": "img/icon24.png",
            "32": "img/icon32.png",
            "38": "img/icon38.png"
        },
        "default_popup": "html/popup.html",
        "default_title": "FreshView for YouTube™"
    },

    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "content_scripts": [{
            "matches": ["https://www.youtube.com/*"],
            "js": [
                "js/video.js",
                "js/manager.js",
                "js/injection.js"
            ],
            "run_at": "document_idle"
    }],

    "permissions": [
        "storage"
    ]
}
